{{#title}}Discussions{{/title}}

<div class="discussion-group seul">
   <a href="/membre/discussion">
      ← Retour à la liste des espaces de discussion
   </a>
   <div class="ligne"></div>
   <div class="entete-espace">
      {{# modo? }}
         <a class="need-confirmation" href="{{ delete_url }}">
            <div class="suppr"></div>
         </a>
         <a href="{{ edit_url }}">
            <div class="edit"></div>
         </a>
      {{/ modo? }}
      <div class="titre-espace">{{ name }}</div>
      <p>{{ description }}</p>
   </div>
   {{> membre/discussion_group/_discussion_previews }}
</div>
<a href="{{ url }}/creer">
   <input class='btn pull-right' type="button" value="Nouvelle discussion"/>
</a>
