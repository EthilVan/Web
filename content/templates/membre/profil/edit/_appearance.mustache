<div class="profil-edit">

   {{# ok? }}
   <div class="flash success">
      Modifications enregistr√©es
   </div>
   {{/ ok? }}

   {{# form }}
   <form class="form-horizontal" {{{ attributes }}}>

      {{# avatar }}
         <div class="control-group">
            <div class="control-label">{{> form/label }}</div>
            <div class="controls large">
               {{> form/input }}
               {{> form/errors }}
            </div>
         </div>
      {{/ avatar }}

      {{# cadre_url }}
         <div class="control-group">
            <div class="control-label">{{> form/label }}</div>
            <div class="controls large">
               {{> form/input }}
               {{> form/errors }}
            </div>
         </div>

      {{/ cadre_url }}

      {{# signature }}
         <div class="control-group">
            <div class="control-label">{{> form/label }}</div>
            <div class="controls">
               {{> membre/profil/edit/_signature_editor }}
               {{> form/errors }}
            </div>
         </div>
      {{/ signature }}

      <div class="clearfix"></div>

      <input class="btn pull-right" type="submit" value="Enregistrer" />
   </form>
   {{/ form }}

</div>
