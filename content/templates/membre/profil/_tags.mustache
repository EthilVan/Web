{{# form }}
<form class="form-tag" {{{ attributes }}}>

   {{# tagger }}{{> form/errors }}{{/ tagger }}

   <div>
   {{# contents }}
      {{> form/errors }}
      {{> form/textarea_counter }}
   {{/ contents }}
   </div>

   <input class="btn pull-right" type="submit" value="Poster" />
   <div class="cleaner"></div>
</form>
{{/ form }}

{{# tags? }}
   {{# tags }}
      <div class="tag">
         <div class="tagger">
            <a href="/membre/@{{ tagger }}">
               <img class="avatar" src="http://secure.gravatar.com/avatar/5ea008d0ce55c3f9c8f3c1954b8f90f1?s=120">
            </a>
            <span class="infos">{{ tagger }} le {{ date }}</span>
         </div>
         <blockquote>
            <p>{{ contents }}</p>
         </blockquote>
      </div>
   {{/ tags }}
{{/ tags? }}
