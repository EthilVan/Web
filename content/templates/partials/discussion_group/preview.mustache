<div class="discussion-group">
   {{# modo? }}
      <a href="{{ delete_url }}" data-remove-target=".discussion-group">
         <div class="suppr"></div>
      </a>
      <a href="{{ edit_url }}">
         <div class="edit"></div>
      </a>
   {{/ modo? }}

   <div class="lien-espace">
      <a href="{{ url }}" title="{{ description }}">
         {{# icon? }}
            <div class="icone">
               <img src="{{ icon }}" />
            </div>
         {{/ icon? }}
         <div class="titre-espace">{{ name }}</div>
      </a>
   </div>

   {{# discussions? }}
   <ul>
      {{# discussions }}
      <li>{{> discussion/preview }}</li>
      {{/ discussions }}
   </ul>
   {{/ discussions? }}

   {{# remaining_or_archived? }}
   <a href="{{ url }}" title="{{ description }}">
      <div class="restantes">
         Discussions restantes : {{ remaining }}
         {{# archived? }}
         (dont {{ archived }} archiv√©e{{# archived_plural? }}s{{/ archived_plural? }})
         {{/ archived? }}
      </div>
   </a>
   {{/ remaining_or_archived? }}
   <a href="{{ url }}/creer">
      <div class="nouvelle">+ Nouvelle discussion</div>
   </a>
   <div class="cleaner"></div>
</div>
