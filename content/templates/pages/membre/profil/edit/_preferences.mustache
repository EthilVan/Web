   </div>
   {{/ ok? }}


   {{# form }}
   <form class="form-horizontal"{{{ attributes }}}>

      {{# show_email }}
      <div class="control-group">
         <div class="control-label">{{> form/label }}</div>
         <div class="controls">
            {{> form/switch }}
            {{> form/errors }}
         </div>
