{{# page_title }}A Propos{{/ page_title }}

<div id="about">

   <h3>Equipe :</h3>

   <ul>
      {{# team }}
      <li class="tiers">
         <p><b>{{ role_fr }} :</b> {{ name }}</p>
         {{# site }}
         <p>Site : <a href="{{ site }}">{{ site }}</a></p>
         {{/ site }}
         {{# twitter }}
         <p>Twitter : <a href="http://twitter.com/{{ twitter }}">{{ twitter }}</a></p>
         {{/ twitter }}
         {{# location }}
         <p>Localisation : {{ location }}</p>
         {{/ location }}
      </li>
      {{/ team }}
   </ul>
   <br>

   <h3>In the wild :</h3>
   <ul>
      <li class="tiers"><a href="http://twitter.com/EthilVan"><img src="{{ static }}images/icones/twitter.png"> Twitter</a></li>
      <li class="tiers"><a href="http://twitter.com/EthilVanDev"><img src="{{ static }}images/icones/twitter.png"> Twitter Développement</a></li>
      <li class="tiers"><a href="https://github.com/EthilVan"><img src="{{ static }}images/icones/github.png"> Github</a></li>
   </ul>
   <br>

   <h3>Caractéristiques techniques :</h3>

   <div class="carac">
      <h5>Déploiement :</h5>
      <ul>
      {{# stack }}
         <li><a href="{{ url }}">{{ name }}</a></li>
      {{/ stack }}
      </ul>
   </div>

   <div class="carac">
      <h5>Composants :</h5>
      <ul>
      {{# components }}
         <li><a href="{{ url }}">{{ name }}</a></li>
      {{/ components }}
      </ul>
   </div>

</div>
