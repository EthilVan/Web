{{# title }}Formulaire de Postulation{{/ title }}

<ul class="nav nav-pills nav-postulation-form">
   <li class="active">
      <a href="#fields-account" data-toggle="pill">Compte</a>
   </li>
   <li><a href="#fields-ethilvan" data-toggle="pill">Ethil Van</a></li>
   <li><a href="#fields-minecraft" data-toggle="pill">Minecraft</a></li>
   <li><a href="#fields-screens" data-toggle="pill">Screenshots</a></li>
   <li><a href="#fields-availability" data-toggle="pill">Disponibilit√©s</a></li>
   <li><a href="#fields-free" data-toggle="pill">Champ Libre</a></li>
</ul>

{{# form }}
<form id="postulation-form" class="tab-content" {{{ attributes }}}>

   <fieldset id="fields-account" class="tab-pane active">

      {{# name }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/input }}
         {{> form/hint }}
      </div>
      {{/ name }}

      {{# minecraft_name }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/input }}
         {{> form/hint }}
      </div>
      {{/ minecraft_name }}

      {{# password }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/input }}
         {{> form/hint }}
      </div>
      {{/ password }}

      {{# password_confirmation }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/input }}
         {{> form/hint }}
      </div>
      {{/ password_confirmation }}

      {{# email }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/input }}
         {{> form/hint }}
      </div>
      {{/ email }}

      {{# birthdate }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/input }}
         {{> form/hint }}
      </div>
      {{/ birthdate }}

      {{# sexe }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/select }}
         {{> form/hint }}
      </div>
      {{/ sexe }}

   </fieldset>

   <fieldset id="fields-ethilvan" class="tab-pane">

      {{# ethilvan_discovered }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
      {{/ ethilvan_discovered }}

      {{# ethilvan_reason }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
      {{/ ethilvan_reason }}

   </fieldset>

   <fieldset id="fields-minecraft" class="tab-pane">

      {{# minecraft_since }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
      {{/ minecraft_since }}

      {{# multi_minecraft }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/checkbox }}
         {{> form/hint }}
      </div>
      {{/ multi_minecraft }}

      {{# old_server }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
      {{/ old_server }}

      {{# old_server_reason }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
      {{/ old_server_reason }}

   </fieldset>

   <fieldset id="fields-screens" class="tab-pane">

      <div class="field-postulation_screens">
         {{# screen_template }}
         <fieldset class="field-screen-template" disabled style="display: none;">
            <h4>{{ screen_title }}</h4>
            {{# url }}
            <div>
               {{> form/errors }}
               {{> form/label }}
               {{> form/input }}
               {{> form/hint }}
            </div>
            {{/ url }}
            {{# description }}
            <div>
               {{> form/errors }}
               {{> form/label }}
               {{> form/textarea }}
               {{> form/hint }}
            </div>
            {{/ description }}
            <a href="#" class="btn remove-screen" >-</a>
         </fieldset>
         {{/ screen_template }}
         {{# screens }}
         <fieldset class="field-screen">
            <h4>{{ screen_title }}</h4>
            {{# url }}
            <div>
               {{> form/errors }}
               {{> form/label }}
               {{> form/input }}
               {{> form/hint }}
            </div>
            {{/ url }}
            {{# description }}
            <div>
               {{> form/errors }}
               {{> form/label }}
               {{> form/textarea }}
               {{> form/hint }}
            </div>
            {{/ description }}
            <a href="#" class="btn remove-screen" >-</a>
         </fieldset>
         {{/ screens }}
         <a href="#" class="btn add-screen">+</a>
      </div>

   </fieldset>

   <fieldset id="fields-availability" class="tab-pane">

      {{# availability }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
      {{/ availability }}

      {{# microphone }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/checkbox }}
         {{> form/hint }}
      </div>
      {{/ microphone }}

      {{# mumble }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/select }}
         {{> form/hint }}
      </div>
      {{/ mumble }}

      {{# mumble_other }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/label }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
      {{/ mumble_other }}

   </fieldset>

   <fieldset id="fields-free" class="tab-pane">

      {{# free_text }}
      <div class="field-{{ id }}">
         {{> form/errors }}
         {{> form/textarea }}
         {{> form/hint }}
      </div>
   {{/ free_text }}

   </fieldset>

   {{# rules_acceptance }}
   <div class="pull-right field-{{ id }}">
      {{> form/errors }}
      {{> form/label }}
      {{> form/checkbox }}
   </div>
   {{/ rules_acceptance }}

   <div class="clearfix"></div>

   <div><input type="submit" class="btn pull-right" value="Envoyer" /></div>
</form>
{{/ form }}
