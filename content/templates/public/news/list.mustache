{{# page_title }}News{{/ page_title }}

{{# redacteur? }}
<div class="align-right">
      <a href="/news/creer">Créer une news</a>
</div>
{{/ redacteur? }}

<div class="newses" data-autofill>
   {{# newses }}
   <div class="news {{ important_class }}">
      {{# redacteur? }}
         <a href="{{ delete_url }}" data-remove-target="div.news">
            <div class="suppr"></div>
         </a>
         <a href="{{ edit_url }}">
            <div class="edit"></div>
         </a>
      {{/ redacteur? }}
      <div class="titre">
         {{# show? }}<a href="{{ url }}">{{ title }}</a>{{/ show? }}
         {{^ show? }}{{ title }}{{/ show? }}
      </div>
      {{# show? }}
      <div class="banner">
         <a href="{{ url }}"><img src="{{ banner_url }}" /></a>
      </div>
      <div class="contenu">{{{ summary }}}</div>
      <div class="suite">
         <a href="{{ url }}">→ Lire la suite...</a>
      </div>
      {{/ show? }}
      <div class="creation"> - Le {{ created }} par {{ author }} - </div>
      <div class="ligne"> </div>
   </div>
   {{/ newses }}
</div>
