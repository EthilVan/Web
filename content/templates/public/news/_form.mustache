<form class="form-horizontal formulaire news-edit" {{{ attributes }}}>

   {{# news_title }}
   <div class="control-group">
      <div class="control-label">{{> form/label }}</div>
      <div class="controls large">
         {{> form/input }}
         {{> form/errors }}
      </div>
   </div>
   {{/ news_title }}

   {{# categories }}
   <div class="control-group">
      <div class="control-label">{{> form/label }}</div>
      <div class="controls large">
         {{> form/multichoice }}
         {{> form/errors }}
      </div>
   </div>
   {{/ categories }}

   {{# banner }}
   <div class="control-group">
      <div class="control-label">{{> form/label }}</div>
      <div class="controls large">
         {{> form/input }}
         {{> form/errors }}
      </div>
   </div>
   {{/ banner }}

   {{# private }}
   <div class="control-group">
      <div class="control-label">{{> form/label }}</div>
      <div class="controls">
         {{> form/errors }}
         {{> form/switch }}
      </div>
   </div>
   {{/ private }}

   {{# edit_form? }}
   {{# important }}
   <div class="control-group">
      <div class="control-label">{{> form/label }}</div>
      <div class="controls">
         {{> form/errors }}
         {{> form/switch }}
      </div>
   </div>
   {{/ important }}
   {{/ edit_form? }}

   {{# commentable }}
   <div class="control-group">
      <div class="control-label">{{> form/label }}</div>
      <div class="controls">
         {{> form/errors }}
         {{> form/switch }}
      </div>
   </div>
   {{/ commentable }}

   {{# summary }}
      {{> public/news/_news_editor }}
   {{/ summary }}

   {{# contents }}
      {{> public/news/_news_editor }}
   {{/ contents }}

   <input class="btn pull-right valider" type="submit" value="Poster" />
</form
