{{# form }}
<form class="form-horizontal formulaire" method="{{ method }}" action="{{ action }}">

   {{# label_common_class }}control-label{{/ label_common_class }}

   {{# name }}
   <div class="control-group">
      {{> form/label }}
      <div class="controls">
         {{> form/input }}
         {{> form/errors }}
      </div>
   </div>
   {{/ name }}

   {{# email }}
   <div class="control-group">
      {{> form/label }}
      <div class="controls">
         {{> form/input }}
         {{> form/errors }}
      </div>
   </div>
   {{/ email }}

   {{# category }}
   <div class="control-group">
      {{> form/label }}
      <div class="controls" id="category">
         {{> form/select }}
         {{> form/errors }}
      </div>
   </div>
   {{/ category }}

   {{# subject }}
   <div class="control-group">
      {{> form/label }}
      <div class="controls">
         {{> form/input }}
         {{> form/errors }}
      </div>
   </div>
   {{/ subject }}

   {{# message }}
   <div class="control-group">
      {{> form/label }}
      <div class="controls">
         {{> form/textarea }}
         {{> form/errors }}
      </div>
   </div>
   {{/ message }}

   <div class="pull-right">
      <input type="submit" class="btn" value="Envoyer" />
   </div>

</form>
{{/ form }}

