<div id="roles" class="accordion">
   {{#roles}}
      {{#members?}}
      <div class="accordion-group role">
         <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse"
                  data-parent="#roles" href="#role-{{name}}">
               <h4>{{ name }}</h4>
               <p>{{ description }}</p>
            </a>
         </div>
         <div id="role-{{name}}" class="accordion-body collapse">
            <div class="accordion-inner">
               <ul>
                  {{#members}}
                  <li class="membre hidden">
                     <div class="name">
                        <div class="icon"></div>
                        {{ name }}
                     </div>
                     <div class="description">
                        <img class="avatar" src="{{{ avatar }}}"/>
                        <p> {{ description }} </p>
                     </div>
                  </li>
                  {{/members}}
               </ul>
            </div>
         </div>
      </div>
      {{/members?}}
   {{/roles}}
</div>
